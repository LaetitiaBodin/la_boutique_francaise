{% extends 'base.html.twig' %}

{% block title %}La Boutique Française - {{ produit.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ produit.illustration }}" alt="{{ produit.name }}" class="img-fluid"/>
        </div>
        <div class="col-md-7 my-auto">
            <h2 class="h5 text-uppercase">{{ produit.name }}</h2>
            <p>{{ produit.subtitle }}</p>
            <p>{{ (produit.price / 100) | number_format(2, ',') }}&nbsp;€</p>
            <hr>
            <p>{{ produit.description }}</p>
            <p>
                <a href="" class="btn btn-primary">Ajouter au panier</a>
            </p>
        </div>
    </div>
{% endblock %}